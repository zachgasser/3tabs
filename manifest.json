{
    "manifest_version": 3,
    "name": "Tab Limiter",
    "version": "1.0",
    "description": "Limits the number of tabs to 3 per window.",
    "permissions": ["tabs", "windows"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    }
  }
  